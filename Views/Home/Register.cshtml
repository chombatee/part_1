@model part_1.Models.registers
@{
    ViewData["Title"] = "Create Your Account";
}

<head>
    <style>
        body {
            font-family: 'Comic Sans MS', cursive, sans-serif;
            background-color: #f4e4f3;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            background-color:aliceblue;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
            width: 400px;
            text-align: center;
        }

            .container h2 {
                color: #6aa;
                font-size: 28px;
                margin-bottom: 25px;
            }

            .container label {
                font-weight: bold;
                margin-bottom: 8px;
                display: block;
                color: #555;
            }

            .container input, .container select {
                width: 100%;
                padding: 12px;
                margin-bottom: 20px;
                border: 1px solid #ddd;
                border-radius: 8px;
                box-sizing: border-box;
            }

            .container button {
                width: 100%;
                padding: 12px;
                background-color:lightskyblue;
                border: none;
                border-radius: 8px;
                color: white;
                font-size: 18px;
                cursor: pointer;
                margin-top: 10px;
            }

                .container button:hover {
                    background-color:lightblue;
                }

            .container p {
                margin-top: 15px;
                font-size: 14px;
            }

            .container a {
                color: aliceblue;
                text-decoration: none;
            }
    </style>
</head>
<body>

    <div class="container">
        <h2>Create Your Account</h2>
        <form asp-action="Registers" method="post">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" placeholder="Choose a username" required />
            <span asp-validation-for="Username" class="text-danger"></span>

            <label asp-for="FullName">Full Name</label>
            <input asp-for="FullName" placeholder="Enter your full name" required />
            <span asp-validation-for="FullName" class="text-danger"></span>

            <label asp-for="Email">Email Address</label>
            <input asp-for="Email" type="email" placeholder="Enter your email" required />
            <span asp-validation-for="Email" class="text-danger"></span>

            <label asp-for="Role">Role</label>
            <select asp-for="Role" required>
                <option value="" disabled selected>Pick your role</option>
                <option value="lecturer">Lecturer</option>
                <option value="coordinator">Programme Coordinator</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>

            <label asp-for="Module">Module</label>
            <select asp-for="Module" required>
                <option value="" disabled selected>Select a module</option>
                <option value="Prog6112">Prog6112</option>
                <option value="Prog5121">Prog5121</option>
            </select>
            <span asp-validation-for="Module" class="text-danger"></span>

            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" placeholder="Create a password" required />
            <span asp-validation-for="Password" class="text-danger"></span>

            <button type="submit">Sign Up</button>

            <p>Already a member? <a asp-action="Index">Login here</a></p>
        </form>
    </div>

</body>
